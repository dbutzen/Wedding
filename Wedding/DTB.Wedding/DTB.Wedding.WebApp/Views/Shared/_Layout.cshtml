<!DOCTYPE html>
<html lang="en" style="background-color: #0f3015;">
 <!--Dark Green-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Dan and Audrey Wedding website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="max-width: 960px; margin: auto;">
    <nav class="navbar navbar-expand-lg bg-purple">
            <a class="navbar-brand" style="color:#d4a8ff" href="~/">Butzen King Wedding</a>
                <button class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle Navigation">
                    <span class="navbar-toggler-icon" style="color:white"><i class="fas fa-bars fa-1x"></i></span>
                </button>

            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="navbar-nav nav">
                    <li class="nav-item active">
                        <a class="nav-link" style="color:#d4a8ff" runat="server" href="~/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#d4a8ff" runat="server" href="~/CodeEntry">RSVP</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#d4a8ff" runat="server" href="~/AboutWedding">Wedding Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#d4a8ff" runat="server" href="~/Venue">Venue Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#d4a8ff" runat="server" href="~/AboutUs">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#d4a8ff" runat="server" href="~/Registry">Registry</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#d4a8ff" runat="server" href="~/Gallery">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#d4a8ff" runat="server" href="~/AdminLogin/Login">Admin Login</a>
                    </li>
                </ul>
            </div>
    </nav>

    <div class="container-fluid" style="min-height: 1000px; color:#0f3015; background-color: #c1f5cb; padding-top: 30px; ">
        <div class="row">

            <div class="col-md-9 container main body-content rounded-bottom" style="min-height:900px">
                <div class="header rounded-top">
                    <h3>@ViewBag.Title</h3>
                </div>
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Dan Butzen</p>
                </footer>
            </div>

        </div>
    </div>

</body>



</html>